<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.example.android.justjava.MainActivity">

    <!--String QUANTITY-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/string_quantity"
        android:textAllCaps="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!--Button decrement-->
        <Button
            android:layout_width="@dimen/button_size_one"
            android:layout_height="@dimen/button_size_one"
            android:onClick="decrement"
            android:text="@string/string_minus" />

        <!--Number of coffees-->
        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/text_margin_one"
            android:paddingRight="@dimen/text_margin_one"
            android:text="@string/string_numbers_coffees"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/text_size_one" />

        <!--Button increment-->
        <Button
            android:layout_width="@dimen/button_size_one"
            android:layout_height="@dimen/button_size_one"
            android:onClick="increment"
            android:text="@string/string_plus" />

    </LinearLayout>


    <!--String PRICE-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/string_price"
        android:textAllCaps="true" />

    <!--PRICE-->
    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_dollar_price"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/text_size_one" />

    <!--Button ORDER-->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:onClick="submitOrder"
        android:text="@string/text_order" />

</LinearLayout>
